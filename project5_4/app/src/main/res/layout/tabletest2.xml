<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:stretchColumns="*" android:shrinkColumns="*"
    android:padding="20dp" android:collapseColumns="1">
<!-- 3가지 꼭 잘 기억하기 !! -->
<!--    stretchColumns 비율 맞추기-->
<!--    shrinkColumns 글자 비율 맞추기(레이아웃 안에서 글자 전부 보이게)-->
<!--    collapseColumns 원하지 않는거 안보이게(줄)-->

    <TableRow>
        <TextView
            android:background="#ff0000"
            android:gravity="center"
            android:text="AAAAAAAAAAAAAAAAA"
            android:textSize="20dp" />
        <TextView
            android:background="#00ff00"
            android:gravity="center"
            android:text="BBBBBBBBBBBBBBBBB"
            android:textSize="20dp"/>
        <TextView
            android:background="#0000ff"
            android:gravity="center"
            android:text="CCCCCCCCCCCCCCCCCC"
            android:textSize="20dp"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_height="50dp"
            android:background="#ff00ff"
            android:gravity="center"
            android:textSize="20dp"
            android:text="1" />
        <TextView
            android:layout_height="50dp"
            android:background="#ffff00"
            android:gravity="center"
            android:textSize="20dp"
            android:text="2" />
        <TextView
            android:layout_height="50dp"
            android:background="#00ffff"
            android:gravity="center"
            android:textSize="20dp"
            android:text="3" />

    </TableRow>
</TableLayout>