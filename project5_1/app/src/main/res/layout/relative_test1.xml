<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!--레이아웃 기준 위젯을 배치시키는 법-->

    <!--layout_alignParentTop 위쪽 layout_centerVertical 가운데-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위쪽"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!--layout_alignParentLeft 왼쪽 layout_centerVertical 세로 가운데-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좌측"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <!--layout_centerInParent 정 가운데-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중앙"
        android:layout_centerInParent="true" />

    <!--layout_alignParentRight 오른쪽 layout_centerVertical 세로 가운데-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우측"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <!--layout_alignParentBottom 아래쪽 layout_centerVertical 가운데-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아래"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>